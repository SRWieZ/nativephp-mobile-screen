{
    "name": "srwiez/nativephp-mobile-screen",
    "description": "A NativePHP plugin",
    "type": "nativephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "you@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "nativephp/mobile": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SRWieZ\\MobileScreen\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SRWieZ\\MobileScreen\\MobileScreenServiceProvider"
            ]
        },
        "nativephp": {
            "manifest": "nativephp.json"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
